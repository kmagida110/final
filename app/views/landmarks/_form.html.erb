<%= form_for @landmark do |f| %>

  <p><%= f.label :name %><%= f.text_field :name, size: 40, autofocus: true, required: true %></p>
  <p><%= f.label :description %><%= f.text_area :description, size: "40x5" %></p>
  <p><%= f.label :image_url %><%= f.text_field :image_url, size: 40 %></p>
  <p><%= f.collection_select :city_id, City.all.order('full_name'), :id, :full_name, required: true %></p>
  

  <p><%= f.submit %></p>


  
<% end %>
